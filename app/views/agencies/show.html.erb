
<div class="col-md-3 profile">
  <%= image_tag("profile.jpg", size: "150", alt: "Badges") %>
  <h2>Profile Name</h2>
  <h5>Member since 2015</h5>
  <h3><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Settings</h3>
  <ul>
    <li>Dashboard</li>
    <li>View Profile</li>
  <ul>
</div>
<div class="col-md-9">
  <h2>Classes Posting</h2>
  <div class="row tasks">
    <div class="col-xs-12">
      <% @classes.each do |course| %>
      	<ul class="course">
      		<li><h3><%= course.name %></h3></li>
      		<li>Max Capacity: <%= course.capacity %></li>
          <li><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></li>
          <li>
            <% course.users.each do |user| %>
              <div>
                User: <%= user.email %>
              </div>
              <div>
                <%= link_to "Approve", {controller: "classes", action: 'approve', user_id: user.id, course_id: course.id}, method: :post, remote: true %>
              </div>
              <div>
                <%= link_to "Deny", {controller: "classes", action: 'deny', user_id: user.id, course_id: course.id}, method: :post, remote: true %>
              </div>
            <% end %>
          </li>
      	</ul>
      <% end %>
    </div>
  </div>
</div>
