<h2>Create a Task</h2>
<%= bootstrap_form_for(@task) do |f| %>
  <%= f.hidden_field :employer_id, :value => @employer.id %>

  <div>
    <%= f.text_field "title" %>
  </div>
  <div>
    <%= f.text_field "description" %>
  </div>
  <div>
    <%= f.text_field "address", class: "address-lookup" %>
  </div>
  <div>
    <%= f.text_field "start_date", data: {provide: "datepicker"}, value: "" %>
  </div>
  <div>
    <%= f.text_field "end_date", data: {provide: "datepicker"}, value: "" %>
  </div>
  <div>
    <%= f.text_field "duration" %>
  </div>
  <div>
    <%= select("task_badge", "badge_id", Badge.all.collect {|p| [ p.name, p.id ] }, {include_blank: 'None'}) %>
  </div>
  <div>
    <%= f.submit "Save", class: "btn btn-success" %>
  </div>
<% end %>
