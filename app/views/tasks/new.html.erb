<h2>Create a task</h2>
<%= form_for @task do |f| %>
  <div>
    <%= f.label "title" %><br>
    <%= f.text_field "title" %>
  </div>
  <div>
    <%= f.label "description" %><br>
    <%= f.text_field "description" %>
  </div>
  <div>
    <%= f.label "address" %><br>
    <%= f.text_area "address", class: "address-lookup" %>
  </div>
  <div>
    <%= f.label "start_date" %><br>
    <%= f.text_area "start_date" %>
  </div>
  <div>
    <%= f.label "end_date" %><br>
    <%= f.text_area "end_date" %>
  </div>
  <div>
    <%= f.label "duration" %><br>
    <%= f.text_area "duration" %>
  </div>
  <div>
    <%= f.submit "Save" %>
  </div>
<% end %>
