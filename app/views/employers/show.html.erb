
<div class="col-md-3 profile">
  <%= image_tag("profile.jpg", size: "150", alt: "Badges") %>
  <h2>Profile Name</h2>
  <h5>Member since 2015</h5>
  <h3><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Settings</h3>
  <ul>
    <li>Dashboard</li>
    <li>View Profile</li>
  <ul>
</div>
<div class="col-md-9">
  <h2>Jobs Posting</h2>
  <div class="row tasks">
    <div class="col-xs-12">
      <% @tasks.each do |task| %>
        <ul class="task">
          <li><h3><%= task.title %></h3></li>
          <li><p><%= task.description %></p></li>
          <li>Edit this job posting <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Delete this job posting <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
