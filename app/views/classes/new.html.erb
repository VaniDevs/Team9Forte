<h2>Create a class</h2>
<%= bootstrap_form_for(@class) do |f| %>
  <%= f.hidden_field :agency_id, :value => @agency.id %>

  <div>
    <%= f.text_field "name" %>
  </div>
  <div>
    <%= f.text_field "description" %>
  </div>
  <div>
    <%= f.text_field "status" %>
  </div>
  <div>
    <%= f.text_field "capacity" %>
  </div>
  <div>
    <%= f.text_field "start_date", data: {provide: "datepicker"}, value: "" %>
  </div>
  <div>
    <%= f.text_field "end_date", data: {provide: "datepicker"}, value: "" %>
  </div>
  <div>
    <%= f.submit "Save", class: "btn btn-success" %>
  </div>
<% end %>
