<div class="row">
  <div class="col-xs-10 col-md-2 col-xs-offset-2 col-md-offset-5 form">
    <h2>Sign up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, size: "30" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", size: "30", hide_label: true %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", size: "30" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>
